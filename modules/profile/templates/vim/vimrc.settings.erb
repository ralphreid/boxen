
noremap  <Up> ""
noremap! <Up> <Esc>
noremap  <Down> ""
noremap! <Down> <Esc>
noremap  <Left> ""
noremap! <Left> <Esc>
noremap  <Right> ""
noremap! <Right> <Esc>
set guifont=Inconsolata-dz\ for\ Powerline:h12

:syntax on
" other colors at /usr/share/vim/vim73/colors
:colors zenburn

filetype off                  " required

set tw=0
set relativenumber            " display line numbers relative
set number                    " display line numbers
set laststatus=2
set noshowmode
set expandtab
set tabstop=2
set shiftwidth=2
set t_Co=256

try
  set cc=80
catch
endtry

autocmd FileType ruby setlocal expandtab shiftwidth=2 tabstop=2
au BufNewFile,BufRead *.md set filetype=markdown
