:syntax on
" other colors at /usr/share/vim/vim73/colors
:colors zenburn

" Enable indentation matching for =>'s
filetype plugin indent on

set tw=0
set relativenumber            " display line numbers relative
set number                    " display line numbers
set laststatus=2
set noshowmode
set expandtab
set tabstop=2
set shiftwidth=2
set t_Co=256

try
  set cc=80
catch
endtry

autocmd FileType ruby setlocal expandtab shiftwidth=2 tabstop=2
au BufNewFile,BufRead *.md set filetype=markdown

highlight LiteralTabs ctermbg=darkgreen guibg=darkgreen
match LiteralTabs /\s\  /
highlight ExtraWhitespace ctermbg=darkgreen guibg=darkgreen
match ExtraWhitespace /\s\+$/

" Show me a ruler
set ruler

" Set up puppet manifest and spec options
au BufRead,BufNewFile *.pp
  \ set filetype=puppet
au BufRead,BufNewFile *_spec.rb
  \ nmap <F8> :!rspec --color %<CR>

" Syntastic settings:
set statusline+=%#warningmsg#
set statusline+=%{SyntasticStatuslineFlag()}
set statusline+=%*
let g:syntastic_always_populate_loc_list = 1
let g:syntastic_auto_loc_list = 1
let g:syntastic_check_on_open = 1
let g:syntastic_check_on_wq = 0

" Snippets
autocmd FileType pp UltiSnipsAddFiletypes puppet
autocmd FileType js UltiSnipsAddFiletypes javascript
autocmd FileType rb UltiSnipsAddFiletypes ruby
